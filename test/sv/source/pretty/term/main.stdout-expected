-- names
variable
%symbol
#primitive
@macro
?nominal

-- parens
var
%sym
@mac
@mac

-- application
one two
one two three
one two three four
one two three
one (two three)

-- abstractions
{} body
{a} body
{a b} body
{~a} body
{~a ~b} body
{~a ~b} body
{~a ~b} body
{~one two ~three ~four five} body
{} {} body
{one} {~two three} body
{one} {~two three} body
({one} two three) four
{one} two (three four)
{one} two three four

-- argument lists
[]
[one]
[one, two]
[[one], [two, three]]
[[one], [two, three], four]
{a b} [[one], [two, three], four]
[[one], [two, three], four, [five, six]]

-- let bindings
!let {x} = one two !in three x
!let {x} = one two !in three x
!let {x y z} = one !in two [x, y, z]
!let {x} = !let {y} = one !in two !in y [one]
!let {x} = one !in !let {y} = two !in [x, y]

-- box
!box one
!box []
!box {one} two three
one (!box two three)

-- run
!run one
!run []
!run {one} two three
one (!run two three)

